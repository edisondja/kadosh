<IfModule mod_rewrite.c>
  RewriteEngine On
  # Si la app está en un subcarpeta (ej: /kadosh/), cambia a: RewriteBase /kadosh/
  RewriteBase /

  # NUNCA reescribir peticiones a archivos estáticos (evita "Unexpected token '<'" en .js)
  RewriteRule ^static/ - [L]
  RewriteRule ^manifest\.json$ - [L]
  RewriteRule ^assets/ - [L]

  # Si piden index.html directamente, servir sin reescribir
  RewriteRule ^index\.html$ - [L]

  # Si es un archivo o carpeta que existe, servir y parar
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # Cualquier otra ruta → index.html (SPA / React Router)
  RewriteRule ^ /index.html [L]
</IfModule>

# Habilitar compresión
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Headers correctos para archivos JavaScript
<FilesMatch "\.js$">
  <IfModule mod_headers.c>
    Header set Content-Type "application/javascript; charset=utf-8"
  </IfModule>
</FilesMatch>

# Headers correctos para archivos CSS
<FilesMatch "\.css$">
  <IfModule mod_headers.c>
    Header set Content-Type "text/css; charset=utf-8"
  </IfModule>
</FilesMatch>

# Prevenir acceso a archivos sensibles
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>
